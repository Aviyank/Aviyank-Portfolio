{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && cd backend && DJANGO_SETTINGS_MODULE=portfolio.settings python manage.py collectstatic --noinput || true",
  "outputDirectory": "backend",
  "installCommand": "pip install -r requirements.txt",
  "framework": null,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/backend/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/backend/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
